{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create venv & install",
      "type": "shell",
      "command": "python -m venv .venv && . .venv/bin/activate && pip install -e '.[dev]'",
      "problemMatcher": []
    },
    {
      "label": "Lint (ruff)",
      "type": "shell",
      "command": ". .venv/bin/activate && ruff check .",
      "group": "build"
    },
    {
      "label": "Type-check (mypy)",
      "type": "shell",
      "command": ". .venv/bin/activate && mypy src/nhkprep",
      "group": "build"
    },
    {
      "label": "Tests (pytest)",
      "type": "shell",
      "command": ". .venv/bin/activate && pytest -q",
      "group": "test"
    }
  ]
}
